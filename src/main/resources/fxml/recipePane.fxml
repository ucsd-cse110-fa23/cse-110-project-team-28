<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="96.0" prefWidth="1000.0" styleClass="recipePane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RecipePaneController">
   <children>
      <ImageView fitHeight="48.0" fitWidth="226.0" pickOnBounds="true" preserveRatio="true" smooth="false" VBox.vgrow="ALWAYS">
         <image>
            <Image url="@../../../../../../../Downloads/images/idle%20hours%20square.jpg" />
         </image>
      </ImageView>
      <HBox alignment="CENTER_LEFT" fillHeight="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="48.0">
         <children>
            <Label fx:id="recipeName" styleClass="recipePaneLabel" text="Lorem Ipsum">
               <font>
                  <Font name="PP Eiko Medium" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="detailsButton" alignment="CENTER" minWidth="-Infinity" mnemonicParsing="false" onAction="#detailsButtonHandler" text="Details">
               <font>
                  <Font name="PP Neue Machina Regular" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                     <image>
                        <Image url="@../images/forward.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="darker" />
                  <String fx:value="recipePaneDetailsButton" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets left="12.0" right="12.0" />
         </padding>
      </HBox>
   </children>
</VBox>
