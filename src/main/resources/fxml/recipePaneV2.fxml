<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="recipePane" minHeight="-Infinity" prefHeight="160.0" prefWidth="600.0" styleClass="recipePane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RecipePaneControllerV2">
   <children>
      <VBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" prefHeight="80.0" StackPane.alignment="BOTTOM_CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="48.0" style="-fx-background-color: #ffffffe0;">
               <children>
                  <Label fx:id="recipeName" styleClass="recipePaneLabel" text="Lorem Ipsum">
                     <font>
                        <Font name="PP Eiko Medium" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="mealTypeLabel" alignment="CENTER" style="-fx-background-color: #cecece; -fx-background-radius: 4px;" styleClass="meal-type-tag" text="Meal Type">
                     <font>
                        <Font name="PP Eiko Medium" size="10.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="12.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="detailsButton" alignment="CENTER" minWidth="-Infinity" mnemonicParsing="false" onAction="#detailsButtonHandler" text="Details">
                     <font>
                        <Font name="PP Neue Machina Regular" size="12.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@../images/forward.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <styleClass>
                        <String fx:value="darker" />
                        <String fx:value="recipePaneDetailsButton" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets left="12.0" right="12.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
