<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="main" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0"
   prefWidth="900.0" style="-fx-background-color: #fefefe;" stylesheets="@../css/style.css"
   xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="controller.MainController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="340.0" styleClass="scrollPane">
         <content>
            <VBox fx:id="recipeList" alignment="TOP_CENTER" fillWidth="false" spacing="8.0">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="64.0" prefWidth="200.0" spacing="12.0"
         styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <!-- <Button mnemonicParsing="false" text="Save Recipes" onAction="#saveRecipesHandler"
               textAlignment="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true"
            smooth="false">
                     <image>
                        <Image url="@../images/download.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="PP Neue Machina Regular" size="12.0" />
               </font>
            </Button> -->
            <Button fx:id="addRecipeButton" mnemonicParsing="false" onAction="#addRecipeHandler"
               text="Add Recipe" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                     preserveRatio="true">
                     <image>
                        <Image url="@../images/add.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="PP Neue Machina Regular" size="12.0" />
               </font>
            </Button>
            <Button fx:id="debugAddRecipeButton" mnemonicParsing="false"
               onAction="#debugAddRecipeHandler" text="(Debug) Add" textAlignment="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                     preserveRatio="true">
                     <image>
                        <Image url="@../images/add.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="PP Neue Machina Regular" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
   <top>
      <VBox id="header"
         style="-fx-border-color: #cecece; -fx-border-style: hidden hidden solid hidden;"
         BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0">
               <children>
                  <Label id="titleLabel" text="PantryPal 2">
                     <font>
                        <Font name="PP Eiko Regular" size="28.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="logoutButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false"
                     onAction="#handleLogout" text="Logout">
                     <font>
                        <Font name="PP Neue Machina Regular" size="12.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                           preserveRatio="true">
                           <image>
                              <Image url="@../images/logout.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="12.0" right="12.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="48.0" spacing="12.0">
               <children>
                  <StackPane alignment="CENTER_LEFT">
                     <children>
                        <ComboBox fx:id="sortComboBox" onAction="#sortHandler"
                           prefHeight="36.0" prefWidth="200.0" promptText="Select sort "
                           style="-fx-background-color: transparent; -fx-border-color: #cecece; -fx-background-radius: 6px; -fx-border-radius: 6px; -fx-font: 12px &quot;PP Neue Machina&quot;;"
                           value="Newest to Oldest">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Newest to Oldest" />
                                 <String fx:value="Oldest to Newest" />
                                 <String fx:value="A-Z" />
                                 <String fx:value="Z-A" />
                              </FXCollections>
                           </items>
                        </ComboBox>
                        <Label style="-fx-background-color: #fefefe;" text="Sort" translateX="12.0"
                           translateY="-18.0">
                           <font>
                              <Font name="PP Neue Machina Regular" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </StackPane>
                  <StackPane alignment="CENTER_LEFT">
                     <children>
                        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                           prefHeight="36.0" prefWidth="240.0"
                           style="-fx-border-color: #cecece; -fx-border-radius: 6px;"
                           StackPane.alignment="CENTER">
                           <children>
                              <ToggleButton fx:id="toggleBreakfast"
                                 maxHeight="1.7976931348623157E308"
                                 maxWidth="1.7976931348623157E308" onAction="#filterHandler"
                                 style="-fx-background-color: transparent; -fx-border-color: #cecece; -fx-border-style: hidden solid hidden hidden;"
                                 text="Breakfast" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="PP Neue Machina Regular" size="12.0" />
                                 </font>
                              </ToggleButton>
                              <ToggleButton fx:id="toggleLunch" maxHeight="1.7976931348623157E308"
                                 maxWidth="1.7976931348623157E308" onAction="#filterHandler"
                                 style="-fx-background-color: transparent; -fx-border-color: #cecece; -fx-border-style: hidden solid hidden hidden;"
                                 text="Lunch" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="PP Neue Machina Regular" size="12.0" />
                                 </font>
                              </ToggleButton>
                              <ToggleButton fx:id="toggleDinner" maxHeight="1.7976931348623157E308"
                                 maxWidth="1.7976931348623157E308" onAction="#filterHandler"
                                 style="-fx-background-color: transparent;" text="Dinner"
                                 HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="PP Neue Machina Regular" size="12.0" />
                                 </font>
                              </ToggleButton>
                           </children>
                        </HBox>
                        <Label style="-fx-background-color: #fefefe;" text="Filter"
                           translateX="12.0" translateY="-18.0">
                           <font>
                              <Font name="PP Neue Machina Regular" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets left="12.0" right="12.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="12.0" top="12.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets top="12.0" />
         </padding>
      </VBox>
   </top>
</BorderPane>